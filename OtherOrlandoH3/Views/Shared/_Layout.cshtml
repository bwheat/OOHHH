<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css"/>
    @*@Styles.Render("~/Content/bootstrapcss")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="collapse navbar-collapse" id="navbar-collapse-1"></div>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("O2H3", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <a href="#" id="eventsNav" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Events <span class="caret"></span></a>
                <ul id="eventsDropdown" class="dropdown-menu">
                    <li>@Html.ActionLink("Red Dress", "RedDress", "Home")</li>
                    <li>@Html.ActionLink("Calendar", "Calendar", "Home")</li>
                    <li>@Html.ActionLink("Hare Line", "Hareline", "Home")</li>
                </ul>
                <li>@Html.ActionLink("Mismanagement", "Mismanagement", "Home")</li>
                <li>@Html.ActionLink("Guidelines", "Guidelines", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <ul class="nav navbar-nav">
                <a href="#" id="linksNav" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Links <span class="caret"></span></a>
                <ul id="linksDropdown" class="dropdown-menu">
                    <li>@Html.ActionLink("Beer Meister", "BeerMeister", "Home")</li>
                    <li>@Html.ActionLink("Hash Stats", "HashStats", "Home")</li>
                    <li>@Html.ActionLink("Haberdashery", "Haberdashery", "Home")</li>
                </ul>
            </ul>
        </div>
    </div>
</div>
<div id="sidebar">
    <div id="NextEvent">

    </div>
</div>
@RenderBody()

@Scripts.Render("~/bundles/jquery")
@*@Scripts.Render("~/bundles/bootstrap")*@

@RenderSection("scripts", required: false)
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
